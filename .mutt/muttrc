
source ~/.mutt/mutt-colors-contrast-256.muttrc
source ~/.mutt/gpg.muttrc

set realname="Jason Schulz"

alternates schulz.j@gmail.com jason@schulz.name

set askcc
set askbcc
set reply_to
set reverse_name
set edit_headers

set send_charset="utf-8"
set assumed_charset="iso-8859-1"

set editor="nvim -c 'set syntax=mail filetype=mail spell spelllang=en nonumber textwidth=0'"

set timeout=300
set mail_check=300
set imap_keepalive=120

unset imap_passive

set ssl_starttls=yes
set ssl_force_tls=yes

set header_cache=/tmp/.headers
set message_cachedir=/tmp/.bodies

set include
set move = no
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes

set menu_scroll=yes
set pager_index_lines=32

set index_format="%[%m-%d (%H:%M)] %Z %-15.15L (%4l) %s"

set sidebar_width = 48
set sidebar_delim = '  |'
set sidebar_visible = yes

set status_chars = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

hdr_order Date From To Cc
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"

alternative_order text/plain text/html *
auto_view text/html application/pdf application/msword

# binds

bind index,pager    J         next-unread
bind index,pager    K         previous-unread 
bind index,pager    r         group-reply
bind index,pager    R         reply

# macros

macro index         <esc>a    "T~N|~O<enter><tag-prefix-cond>;WNWO^T~T<enter>"                                        "mark all messages read"

# sidebar

bind index,pager    <down>    sidebar-next
bind index,pager    <up>      sidebar-prev
bind index,pager    <right>   sidebar-open

# google mail

set hostname=gmail.com

macro index,pager   y         "<enter-command>unset trash<enter><delete-message>"                                         "gmail archive message"
macro index,pager   d         "<enter-command>set trash=\"=[Gmail]/Trash\"<enter><delete-message>"                        "gmail delete message"
macro index,pager   gi        "<change-folder>=INBOX<enter>"                                                          "go to inbox"
macro index,pager   ga        "<change-folder>=[Gmail]/All Mail<enter>"                                               "go to all mail"
macro index,pager   gs        "<change-folder>=[Gmail]/Starred<enter>"                                                "go to starred messages"
macro index,pager   gd        "<change-folder>=[Gmail]/Drafts<enter>"                                                 "go to drafts"
macro index,pager   S         "<save-message>=[Gmail]/Spam<enter>"                                                    "mark as spam"

bind index,pager    G         imap-fetch-mail

# google contacts

set query_command="/usr/bin/goobook query '%s'"

macro index,pager   a         "<pipe-message>/usr/bin/goobook add<enter>"                                             "add to address book"

bind editor         <tab>     complete-query

# labels

